{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "NodeNext",
    "target": "es2020",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "declaration": true,
    "allowJs": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "files": true
  },
  "include" : [
    "./src/**/*"
  ]
}