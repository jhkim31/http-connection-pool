
{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "NodeNext",
    "target": "es2020",
    "strict": true,
    "rootDir": "./src",            
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "declaration": true,        
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "files": true
  },
  "include" : [
    "./src/**/*"
  ]
}